@using StackExchange.Profiling

<!DOCTYPE html>
<html>
	<head>
		@this.InitClientTimings()
		<meta charset="utf-8" />
		<title>@ViewBag.Title</title>
		
		@this.TimeScript("Site.css", @<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />)
		@this.TimeScript("jQuery UI.css", @<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />)
		@this.TimeScript("jQuery", @<script src="@Url.Content("~/Scripts/jquery-2.0.0.min.js")" type="text/javascript"></script>)
		@this.TimeScript("jQuery UI", @<script src="@Url.Content("~/Scripts/jquery-ui-1.10.2.min.js")" type="text/javascript"></script>)
		@this.TimeScript("jQuery HotKeys", @<script src="@Url.Content("~/Scripts/jquery.hotkeys-0.7.9.min.js")" type="text/javascript"></script>)
		@this.TimeScript("knockout", @<script src="@Url.Content("~/Scripts/knockout-2.2.1.js")" type="text/javascript"></script>)
		@this.TimeScript("underscore", @<script src="@Url.Content("~/Scripts/underscore.js")" type="text/javascript"></script>)
		@this.TimeScript("front end", @<script src="@Url.Content("~/Scripts/front-end.js")" type="text/javascript"></script>)

		@MiniProfiler.RenderIncludes()
	</head>
	<body>
		<div class="page">
			<header>
				<div id="title">
					<h1>My MVC Application</h1>
				</div>
				<div id="logindisplay">
					Welcome <strong>@User.Identity.Name</strong>!
				</div>
				<nav>
					<ul id="menu">
						<li>@Html.ActionLink("Home", "Index", "Home")</li>
						<li>@Html.ActionLink("Accounts", "Index", "Account")</li>
						<li>@Html.ActionLink("Import", "Directory", "Import")</li>
					</ul>
				</nav>
			</header>
			<section id="main">
				<div id="exception"></div>
			
				@RenderBody()
			</section>
			<footer>
			</footer>
		</div>
	</body>
</html>